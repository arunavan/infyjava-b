    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>GetProductController</display-name>
    <servlet-name>GetProductController</servlet-name>
    <servlet-class>com.pms.GetProductController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetProductController</servlet-name>
    <url-pattern>/getallproducts</url-pattern>
  </servlet-mapping>
</web-app>